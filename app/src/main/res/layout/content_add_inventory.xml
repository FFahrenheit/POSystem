<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre del producto o cÃ³digo"
            android:maxLines="1"
            android:textSize="18dp"
            android:id="@+id/addInventorySearch"
            android:inputType="text"
            android:textAlignment="center">
        </com.google.android.material.textfield.TextInputEditText>

        <ListView
            android:id="@+id/addInventoryList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></ListView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="100dp"
            android:id="@+id/emptySearchAddInventory"
            android:textSize="18dp"
            android:textAlignment="center"
            android:text="No se encontraron resultados. Realice su busqueda"></TextView>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.constraintlayout.widget.ConstraintLayout>