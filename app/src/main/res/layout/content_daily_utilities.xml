<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp">
        <TextView
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reporte diario. Seleccione el dia"
            android:textSize="18dp"
            android:textAlignment="center">
        </TextView>
        <Button
            android:id="@+id/dailyUtilitiesButton"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seleccionar fecha">
        </Button>
        <TextView
            android:id="@+id/dailyUtilitiesDate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="18dp"
            android:textAlignment="center"
            android:hint="Fecha"
            android:layout_marginVertical="10dp">
        </TextView>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:weightSum="3">
           <LinearLayout
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:layout_weight="1"
               android:layout_marginVertical="10dp"
               android:layout_marginHorizontal="5dp">
              <TextView
                  android:layout_marginVertical="8dp"
                  android:textAlignment="center"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Vendido"
                  android:textSize="18dp">
              </TextView>
               <TextView
                   android:id="@+id/dailyUtilitiesSold"
                   android:layout_marginVertical="8dp"
                   android:textAlignment="center"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:hint="$0.0"
                   android:textSize="18dp">
               </TextView>
               <Button
                   android:id="@+id/dailyUtilitiesSoldButton"
                   android:layout_marginVertical="8dp"
                   android:textAlignment="center"
                   android:layout_height="wrap_content"
                   android:layout_width="match_parent"
                   android:textSize="18dp"
                   android:text="Ver">
               </Button>
           </LinearLayout>
           <LinearLayout
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:layout_weight="1"
               android:layout_marginVertical="10dp"
               android:layout_marginHorizontal="5dp">
               <TextView
                   android:layout_marginVertical="8dp"
                   android:textAlignment="center"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Pagado"
                   android:textSize="18dp">
               </TextView>
               <TextView
                   android:id="@+id/dailyUtilitiesPaid"
                   android:layout_marginVertical="8dp"
                   android:textAlignment="center"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:hint="$0.0"
                   android:textSize="18dp">
               </TextView>
               <Button
                   android:id="@+id/dailyUtilitiesPaidButton"
                   android:layout_marginVertical="8dp"
                   android:textAlignment="center"
                   android:layout_height="wrap_content"
                   android:layout_width="match_parent"
                   android:textSize="18dp"
                   android:text="Ver">
               </Button>
           </LinearLayout>
           <LinearLayout
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:layout_weight="1"
               android:layout_marginVertical="10dp"
               android:layout_marginHorizontal="5dp">
               <TextView
                   android:layout_marginVertical="8dp"
                   android:textAlignment="center"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="% Utilidad"
                   android:textSize="18dp">
               </TextView>
               <TextView
                   android:id="@+id/dailyUtilitiesPercentage"
                   android:layout_marginVertical="8dp"
                   android:textAlignment="center"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:hint="$0.0"
                   android:textSize="18dp">
               </TextView>
               <TextView
                   android:id="@+id/dailyUtilitiesTotal"
                   android:layout_marginVertical="8dp"
                   android:textAlignment="center"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:hint="$0.0"
                   android:textSize="18dp">
               </TextView>
           </LinearLayout>
       </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>